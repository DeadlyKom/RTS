
                ifndef _STRUCT_LEVEL_
                define _STRUCT_LEVEL_

                struct FLevelInfo
Map             FFile                                                           ; имя файла тайловой карты
TilemapSpr      FFile                                                           ; имя файла таблицы + спрайты тайловой карты
Size            FMapSize 0, 0                                                   ; размер карты
StartSlotA      FLocation 0, 0                                                  ; координаты старта слот A
StartSlotB      FLocation 0, 0                                                  ; координаты старта слот B
StartSlotC      FLocation 0, 0                                                  ; координаты старта слот C

                ends

                struct FLevelUnitInfo
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | F1 | F0 | .. | .. | .. | .. | .. | .. |
;   +----+----+----+----+----+----+----+----+
;
;   F1,F0   [7,6]   - тип фракции
;                       00 - игрок
;                       01 - природа/союзники
;                       10 - враг 1
;                       11 - враг 2
; -----------------------------------------
Faction         DB #00                                                          ; принадлежность к фракции
Number          DB #00                                                          ; количество

                ends

                struct FLevelUnitData
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | .. | .. | .. | WP | PL |
;   +----+----+----+----+----+----+----+----+
;
;   SL      [2]     - флаг шаттла
;   WP      [1]     - флаг наличия в WayPointIdx валидного индекса последовательности Way Points
;   PL      [0]     - флаг расположения юнита:
;                       0 - спавнится через спавнер, Location позиция спавнера
;                       1 - находится на карте, Location  позиция на карте
; -----------------------------------------
Flags           DB #00
Type            DB #00                                                          ; тип юнита см FUnit.Type
Location        FLocation 0, 0                                                  ; позиция а тайлах
Rank            DB #00                                                          ; ранг юнита см FUnit.Rank
WayPointIdx     DB #00

                ends

                endif ; ~ _STRUCT_LEVEL_
