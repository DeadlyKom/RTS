                module Tables

                align 256
; ---------------------------------------------
; таблица умножения для расчёта размера (без учёта маски)
; ---------------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | 0  | W1 | W0 | R4 | R3 | R2 | R1 | R0 |
;   +----+----+----+----+----+----+----+----+
;
;   W1,W0   [6,5]   - ширина спрайта в знакоместах
;   R4-R0   [4..0]  - количество пропускаемых строк
;
;   Width - ширина спрайта                 1-4 байта
;   Row   - количество пропускаемых строк  1-32 строки
;
;   размер таблицы 128 байт,
; ---------------------------------------------
MultiplySprite:
.Row            defl 0
.Width          defl 1
                dup 4                                                           ; максимальная длина спрайта в знакоместах
                dup 32                                                          ; максимальное количество пропускаемых строк спрайта
                DB (.Row * .Width) & 0xFF
.Width          = .Width + 1
                edup
.Width          = 1
.Row            = .Row + 1
                edup
                
                display " - Multiply Sprite Table : \t\t", /A, MultiplySprite, " = busy [ ", /D, $ - MultiplySprite, " bytes  ]"

                endmodule
